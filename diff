<body>

<h1>RAID BOSS</h1>

<div id="frame">
  <div id="bar">
    <div id="hp"></div>
  </div>
</div>

<p id="text">HP: 100 / 100</p>

<button onclick="damage(10)">-10 HP</button>
<button onclick="damage(25)">-25 HP</button>
<button onclick="heal(10)">+10 HP</button>

<script>
let maxHP = 100;
let currentHP = 100;

function update() {
  document.getElementById("hp").style.width =
    (currentHP / maxHP * 100) + "%";
  document.getElementById("text").textContent =
    `HP: ${currentHP} / ${maxHP}`;
}

function damage(amount) {
  currentHP = Math.max(currentHP - amount, 0);
  update();
}

function heal(amount) {
  currentHP = Math.min(currentHP + amount, maxHP);
  update();
}

update();
</script>

</body>
